<h1>Details of <%= @cocktail.name %></h1>
<h2>Ingredients</h2>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.description %> of <strong><%= dose.ingredient.name %></strong> |
      <%= link_to 'Delete',
          delete_dose_path(dose),
          method: 'delete',
          data: { confirm: "Delete the dose ?" }
      %>
    </li>
  <% end %>
</ul>

<br>
<%= link_to 'Add a new dose', new_dose_path(@cocktail), class: 'btn-primary-pink' %>
